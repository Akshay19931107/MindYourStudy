{
  "version": 2,
  "builds": [
    { "src": "app.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/app.py" }
  ],
  "functions": {
    "app.py": {
      "memory": 1024,  // Increase memory limit (512MB by default)
      "maxDuration": 10  // Increase max duration for long-running tasks
    }
  }
}

